<div class="container mt-5">
    <div class="row tm-content-row">
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 tm-block-col">
            <div class="tm-bg-primary-dark tm-block tm-block-search">
                <h2 class="tm-block-title">Tìm kiếm sản phẩm</h2>
                <form action="/search-product">
                    <input class = "form-control validate" type="text" name="search" placeholder="Nhập từ khóa cần tìm">
                    <button type="submit" class="btn btn-primary btn-search"><i class="fas fa-search"></i></button>
                </form>
            </div>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 tm-block-col">
            <div class="tm-bg-primary-dark tm-block tm-block-products">
                <h2 class="tm-block-title">Danh sách sản phẩm</h2>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Ảnh</th>
                            <th scope="col">Tên sản phẩm</th>
                            <th scope="col">SL</th>
                            <th scope="col">Đơn giá</th>
                            <th scope="col">Tác giả</th>
                            <th scope="col">Nhà xuất bản</th>
                            <th scope="col">Xóa</th>
                        </tr>
                    </thead>
                </table>
                <div class="tm-product-table-container">
                    <table class="table table-hover tm-table-small tm-product-table table-striped">

                        <tbody>
                            {{!-- Lấy dữ liệu bỏ vảo view --}}
                            {{#each this.listproduct}}
                            <tr>
                                <td>
                                    <img src="{{img}}" alt="imgage product" style="width:50px;height:50px">
                                </td>                                
                                <td class="tm-product-name"><a href="/edit-product?id={{id}}" style="color:white;">{{tensanpham}}</a></td>
                                <td>{{sl}}</td>
                                <td>{{dongia}}</td>
                                <td>{{tentacgia}}</td>
                                <td>{{nxb}}</td>
                                <td>
                                    <a href="/delete-product?id={{id}}" class="tm-product-delete-link">
                                        <i class="far fa-trash-alt tm-product-delete-icon"></i>
                                    </a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                <!-- table container -->
                <a href="add-product" class="btn btn-primary btn-block text-uppercase mb-3">Thêm sản phẩm</a>
            </div>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 tm-block-col">
            <div class="tm-bg-primary-dark tm-block tm-block-product-categories">
                <h2 class="tm-block-title">Danh sách thể loại</h2>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Mã thể loại</th>
                            <th scope="col">Tên thể loại</th>
                            <th scope="col">Chỉnh sửa</th>
                            <th scope="col">Xóa</th>
                        </tr>
                    </thead>
                </table>
                <div class="tm-product-table-container table-category">
                    <table class="table tm-table-small tm-product-table table-striped">
                        <tbody>
                            {{#each this.listcate}}
                            <tr>
                                <form action="/edit-category?id={{this.id_theloai}}" method = "POST">
                                    <td class="form-group tm-categories-name">
                                        <input type="text" class="form-control" name="id_theloai" value="{{id_theloai}}">
                                    </td>
                                    <td class="form-group tm-categories-name">
                                        <input type="text" class="form-control" name="ten" value="{{ten}}">
                                    </td>
                                    <td class="text-center">
                                        <button type="submit" class="btn btn-primary"><i class="fas fa-edit tm-product-delete-icon"></i></button>
                                    </td>
                                    <td class="text-center">
                                        <a href="/delete-category?id={{id_theloai}}" class="tm-product-delete-link">
                                            <i class="far fa-trash-alt tm-product-delete-icon"></i>
                                        </a>
                                    </td>
                                </form>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                <!-- table container -->
                <form action="/add-category" method = "POST">
                    <div class="row">
                        <!-- <h2>Thêm danh mục</h2> -->
                        <div class="form-group col-lg-6">
                            <label for="id_theloai">Mã thể loại</label>
                            <input type="text" class="form-control" name="id_theloai">
                        </div>
                        <div class="form-group col-lg-6">
                            <label for="ten">Tên thể loại</label>
                            <input type="text" class="form-control" name="ten">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary text-uppercase btn-block">Thêm thể loại mới</button>
                </form>
            </div>
        </div> 
    </div>
</div>
<script src="js/jquery-3.3.1.min.js"></script>
<!-- https://jquery.com/download/ -->
<script src="js/bootstrap.min.js"></script>
<!-- https://getbootstrap.com/ -->
<script>
    $(function () {
        $(".tm-product-name").on("click", function () {
            window.location.href = "edit-product";
        });
    });
</script>