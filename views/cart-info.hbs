<div class="container mt-5">
    <div class="row tm-content-row">
    <div class="row tm-content-row m-auto">
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 tm-block-col">
            <div class="tm-bg-primary-dark tm-block tm-block-products">
                <h2 class="tm-block-title">Đơn Hàng</h2>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Ảnh</th>
                            <th scope="col">Mã Sách</th>
                            <th scope="col">Tên Sách</th>
                            <th scope="col">SL</th>
                            <th scope="col">Tổng Tiền</th>
                        </tr>
                        {{#each this.listproduct}}
                            <tr>
                                <td scope="col">
                                    <img src="{{img}}" alt="imgage product" style="width:50px;height:50px">
                                </td>                                
                                
                                <td scope="col">{{id}}</td>
                                <td scope="col" class="tm-product-name"><a href="/edit-product?id={{id}}" style="color:white;">{{tensanpham}}</a></tdscope="col">
                                <td scope="col">{{sl}}</td>
                                <td scope="col">{{tongtien}}</td>
                            </tr>
                        {{/each}}
                    </thead>
                </table>
                <p class="text-right text-white">Thành Tiền: {{this.thanhtien}} VNĐ</p>
                <a href="cart-info" class="btn btn-primary btn-block text-uppercase mb-3">Danh sách đơn hàng</a>
                
            </div>
        </div>
    </div> 
<script src="js/jquery-3.3.1.min.js"></script>
<!-- https://jquery.com/download/ -->
<script src="js/bootstrap.min.js"></script>
<!-- https://getbootstrap.com/ -->
<script>
    $(function () {
        $(".tm-product-name").on("click", function () {
            window.location.href = "edit-product";
        });
    });
</script>